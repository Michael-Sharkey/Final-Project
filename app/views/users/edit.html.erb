<%= image_tag @user.avatar.url(:thumb) %>


<%= form_with model: @user, html: { multipart: true}, local: true do |f| %>
<%= f.label 'Profile Picture' %>
<%= f.file_field :avatar %>
<%= f.label 'Username' %>
<%= f.text_field :username %><br>
<%= f.label 'Bio' %>
<%= f.text_area :bio %><br>
<%= f.label 'Location' %>
<%= f.text_field :location %><br>
<%= f.label 'Age' %>
<%= f.text_field :age %><br>
<%= f.label 'Height' %>
<%= f.text_area :height %><br>
<%= f.label 'Weight' %>
<%= f.text_field :weight %><br>
<%= f.submit %>
<% end %>
