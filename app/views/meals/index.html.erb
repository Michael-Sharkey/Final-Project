<h1>Meals#index</h1>
<p>Find me in app/views/meals/index.html.erb</p>

<div id="meals" class="container carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @meals.each do |meal| %>
    <div class="carousel-item">
      <%= image_tag meal.photo.url, class: "d-block w-100" %>
    </div>
    <% end %>
  </div>
</div>
  <a class="carousel-control-prev" href="#meals" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#meals" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
