
<div class="container">
<%= simple_form_for @workout do |f| %>
  <div class="form-group all-sets">
    <%= f.simple_fields_for :worksets do |workset| %>
    <%= render 'workset_fields', f: workset  %>
    <% end %>
    <div class='links form-group'>
      <button type="button" class="btn btn-primary btn-sm"><%= link_to_add_association 'Add Set', f, :worksets, class: 'buttons' %></button>
    </div>
  </div>
  <div class="form-group">
    <div class="row justify-content-center">
      <div class="col-3">
        <%= f.button :submit, "Finished!", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
</div>
