<div class="card" id="new-workout">
  <h5>Train</h5>
  <%= simple_form_for @workout do |f| %>
    <%= f.simple_fields_for :exercises do |exercise| %>
      <%= render 'exercise_fields', f: exercise %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Set', f, :exercises %>
    </div>
  <%= f.button :submit, "Finished!" %>
  <% end %>
</div>
