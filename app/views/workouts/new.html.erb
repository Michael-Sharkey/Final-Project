<div class="jumbotron container">
  <%= simple_form_for @workout do |w| %>
  <div class="form-row">
    <div class="col">
      <button id="set_btn" type="button" class="btn btn-success">Add Set</button>
    </div>
    <div class="col">
      <button class="btn btn-warning" type="button" data-toggle="collapse" data-target="#commentField" aria-expanded="false" aria-controls="collapseExample">Add Notes</button>
    </div>
    <div class="col"><%= w.button :submit, class: "btn btn-primary" %></div>
  </div>

  <div class="form-row table-dark">
    <div class="col">Movement</div>
    <div class="col">Exercise</div>
    <div class="col">Weight</div>
    <div class="col">Reps</div>
    <div class="col">RPE</div>
  </div>
  <div class="form-row">
    <%= w.simple_fields_for :worksets do |s| %>
    <div class="col"><%= s.input :movement_id, collection: Movement.order(:name), input_html: {id: "movement"}, label: false %></div>
    <div class="col"><%= s.input :exercise_id, collection: Movement.order(:name), as: :grouped_select, group_method: :exercises, input_html: {id: "exercise"}, label: false %></div>
    <div class="col"><%= s.input :weight, input_html: {class: "form-control"}, label: false %></div>
    <div class="col"><%= s.input :repetitions, input_html: {class: "form-control"}, label: false %></div>
    <div class="col"><%= s.input :rpe, input_html: {class: "form-control"}, label: false %></div>
  </div>
<% end %>
<div class="form-row" id="commentField">
  <%= w.input :notes, as: :trix_editor %>
</div>
<% end %>
</div>
