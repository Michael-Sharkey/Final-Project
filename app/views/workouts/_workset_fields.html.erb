<div class='nested-fields form-group'>
  <div class="form-row">
    <div class="col">
      <%= f.input :movement_id, collection: Movement.order(:name), input_html: {class: "movement form-control-sm"}, label: false %>
    </div>
    <div class="col">
      <%= f.input :exercise_id, collection: Movement.order(:name), as: :grouped_select, group_method: :exercises, input_html: {class: "exercise form-control-sm"}, label: false %>
    </div>
  </div>
  <div class="form-row">
    <div class="col-4">
      <%= f.input :weight, placeholder: 'Weight', input_html: {class: "form-control-sm"}, label: false %>
    </div>
    <div class="col-3">
      <%= f.input :repetitions, placeholder: 'Reps', input_html: {class: "form-control-sm"}, label: false %>
    </div>
    <div class="col-3">
      <%= f.input :rpe, placeholder: 'RPE', input_html: {class: "form-control-sm"}, label: false %>
    </div>
    <div class="col-2">
      <button type="button" class="btn btn-danger btn-sm"><%= link_to_remove_association "Remove", f, class: "buttons" %></button>
    </div>
  </div>
</div>
