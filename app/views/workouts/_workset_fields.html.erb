
<div class='nested-fields form-group'>

  <div class="form-row">
    <div class="col">
      <%= f.input :movement_id, collection: Movement.order(:created_at).pluck(:pattern).uniq, input_html: {class: "movement form-control-sm"}, label: false %>
    </div>
    <div class="col">
      <%= f.input :exercise_id, collection: Movement.all, as: :grouped_select, group_method: :exercises, group_label_method: :pattern, input_html: {class: "movement form-control-sm"}, label: false %>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <%= f.input :weight, placeholder: 'Weight', input_html: {class: "form-control-sm"}, label: false %>
    </div>
    <div class="col">
      <%= f.input :reps, placeholder: 'Reps', input_html: {class: "form-control-sm"}, label: false %>
    </div>
    <div class="col">
      <%= f.input :rpe, placeholder: 'RPE', input_html: {class: "form-control-sm"}, label: false %>
    </div>
    <div class="col">
      <button type="button" class="btn btn-danger btn-sm"><%= link_to_remove_association "Remove", f, class: 'buttons' %></button>
    </div>
  </div>

</div>
