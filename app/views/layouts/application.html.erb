<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

      <ul class="nav nav-pills">
        <li class="nav-item"><%= link_to "Workout", new_workout_path, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "Eat", new_meal_path, class: "nav-link active" %></li>
      </ul>

      <ul class="nav justify-content-end">
      <% if signed_in? %>
        <li class="nav-item"><%= link_to "Home".html_safe, root_path, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "Dashboard".html_safe, user_path(current_user), class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "Log Out", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class: "nav-link active" %></li>
      <% else %>
        <li class="nav-item"><%= link_to "Log In", new_user_session_path, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path, class: "nav-link active" %></li>
      <% end %>
      </ul>
      
    </nav>



    <p class="notice alert-success"><%= notice %></p>
    <%= yield %>

  </body>
</html>
