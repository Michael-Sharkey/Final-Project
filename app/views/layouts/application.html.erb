<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <h1>BarBender</h1>
    </header>

    <div class="nav-menu"></div>

    <nav>
        <% if signed_in? %>
          <%= link_to "Workout", new_workout_path, class: "button" %>
          <%= link_to "Eat", new_meal_path, class: "button" %>
          <%= link_to "Dashboard".html_safe, user_path(current_user), class: "button" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class: "button" %>
        <% else %>
          <%= link_to "Log In", new_user_session_path, class: "button" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
        <% end %>
    </nav>

    <p><%= notice %></p>

    <main>
      <%= yield %>
    </main>

    <div class="new-menu"></div>

    <footer>
      <% if signed_in? %>
      <%= link_to "Workout", new_workout_path, class: "button" %>
      <%= link_to "Eat", new_meal_path, class: "button" %>
      <%= link_to "Dashboard".html_safe, user_path(current_user), class: "button" %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class: "button" %>
    <% else %>
      <%= link_to "Log In", new_user_session_path, class: "button" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
    <% end %>
  </footer>

  </body>
</html>
