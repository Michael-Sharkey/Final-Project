<h1>Log a Workout</h1>

<%= form_with model: @training_session, local: true do |f| %>
    <%= f.fields_for :worksets do |w| %>
      <%= w.label :type %>
      <%= w.select :type, ['Push', 'Pull', 'Squat', 'Hinge', 'Calisthenics']%>

      <%= w.label 'Exercise' %>
      <%= w.text_field :exercise %>
      <%= w.label 'Reps' %>
      <%= w.text_field :repetitions %>
      <%= w.label 'Weight' %>
      <%= w.text_field :external_load %>
    <% end %>

  <%= f.label 'duration' %>
  <%= f.text_field :duration %>
  <%= f.label 'rating' %>
  <%= f.text_field :rating %>
  <%= f.submit %>
<% end %>
